<Window x:Class="ReliefProMain.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="60" Width="525"  
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        x:Name="Splash">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <ProgressBar x:Name="progress" Maximum="{Binding SProgressValue}" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="6" Value="{Binding ProgressValue}" Height="6" Width="350">
                </ProgressBar>
                <Label  x:Name="txtInfo"  Content="{Binding Message}"  HorizontalAlignment="Center" Width="300" Margin="6"></Label>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
