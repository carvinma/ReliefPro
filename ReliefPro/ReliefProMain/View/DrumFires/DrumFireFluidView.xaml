<Window x:Name="DrumFluidWin" x:Class="ReliefProMain.View.DrumFires.DrumFireFluidView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:CustomControl="clr-namespace:ReliefProMain.CustomControl"
        Title="Drum_fire" Height="280" Width="419.808" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="RowDefinition">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="25,5,0,0"></Setter>
        </Style>
        <Style TargetType="{x:Type CustomControl:UnitConvertTextBox}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Height" Value="23"></Setter>
            <Setter Property="Width" Value="120"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
        <Style x:Key="LabelLeftStyle">
            <Setter Property="Control.HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Control.VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="36"></RowDefinition>
            <RowDefinition Height="59"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="222"></ColumnDefinition>
            <ColumnDefinition Width="151"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Gas/Vapor MW"  Grid.Row="0" Height="24" Margin="25,6,0,1" Width="98"/>
        <Label Content="Exposed Surface Area of Vessel" Grid.Row="1" Height="26" Width="189"/>
        <Label Content="Normal Operating Temperature"  Grid.Row="2" Height="24" Margin="25,6,0,1" Width="192"/>
        <Label Content="Normal Operating Pressure" Grid.Row="3" Height="26" Width="167"/>
        <Label Content="PSV Set Pressure" Grid.Row="4" Height="24" Margin="25,6,0,1" Width="106"/>
        <Label Content="TW" Grid.Row="5" Height="26" Width="29" Margin="25,8,0,2"/>
        
        <TextBox Text="{Binding Path=model.VaporMW,Mode=TwoWay}" Grid.Column="1"  Grid.Row="0" Margin="17,4,14,4"/>
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.Vessel,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblVessel,Path=Content,Mode=TwoWay}" Grid.Column="1"  Grid.Row="1" Margin="17,4,14,4" />
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.Temperature,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblTempre,Path=Content,Mode=TwoWay}" Grid.Column="1"  Grid.Row="2" Margin="17,4,14,4" />
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.Pressure,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblPre,Path=Content,Mode=TwoWay}" Grid.Column="1"  Grid.Row="3" Margin="17,4,14,4" />
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.PSVPressure,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblPsvPre,Path=Content,Mode=TwoWay}" Grid.Column="1"  Grid.Row="4" Margin="17,4,14,4" />
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.TW,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblTW,Path=Content,Mode=TwoWay}" Grid.Column="1"  Grid.Row="5" Margin="17,8,14,6" Height="22"/>

        <Label x:Name="lblVessel" Content="{Binding model.VesselUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="2" Grid.Row="1" Height="10" Margin="0,11,0,10" Width="10"/>
        <Label x:Name="lblTempre" Content="{Binding model.TemperatureUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="2" Grid.Row="2" Height="10" Margin="0,10,0,11" Width="10"/>
        <Label x:Name="lblPre" Content="{Binding model.PressureUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="2" Grid.Row="3" Height="10" Margin="0,11,0,10" Width="10"/>
        <Label x:Name="lblPsvPre" Content="{Binding model.PSVPressureUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="2" Grid.Row="4" Height="10" Margin="0,10,0,11" Width="10"/>
        <Label x:Name="lblTW" Content="{Binding model.TWUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="2" Grid.Row="5" Height="10" Margin="0,14,0,12" Width="10"/>
        <Button Content="OK" Command="{Binding OKCMD}" CommandParameter="{Binding ElementName=DrumFluidWin}" Grid.Column="0" Grid.Row="6"  Width="74"  Height="26" Margin="74,22,74,11"/>
        <Button Content="Cancel" IsCancel="True" Grid.Column="1"  Grid.Row="6" Width="74" Height="26" Margin="39,22,38,11"/>
    </Grid>
</Window>
