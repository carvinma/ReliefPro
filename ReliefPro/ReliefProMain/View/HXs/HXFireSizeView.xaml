<Window x:Name="myWindow" x:Class="ReliefProMain.View.HXs.HXFireSizeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomControl="clr-namespace:ReliefProMain.CustomControl"
        Title="{DynamicResource HXFireSizeViewTitle}" Height="260" Width="485">
    <Window.Resources>
        <Style TargetType="RowDefinition">
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="10,5,0,0"></Setter>
        </Style>
        <Style TargetType="{x:Type CustomControl:UnitConvertTextBox}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Height" Value="23"></Setter>
            <Setter Property="Width" Value="120"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
        <Style x:Key="LabelLeftStyle">
            <Setter Property="Control.HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Control.VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Height" Value="23"></Setter>
            <Setter Property="Width" Value="120"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="140"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label  Content="{DynamicResource ExposedtoFire}" Grid.Column="1" Grid.Row="0" />
        <Label  Content="{DynamicResource Type}" Grid.Column="1" Grid.Row="1" />
        <Label  Content="{DynamicResource OD}"  Grid.Column="1" Grid.Row="2" />
        <Label  Content="{DynamicResource Length}"  Grid.Column="1" Grid.Row="3"  />
        <Label  Content="{DynamicResource PipingContingency}" Grid.Column="1" Grid.Row="4"  />
        <Label Content="{DynamicResource Elevation}" Grid.Column="1" Grid.Row="5" />
        <CustomControl:UnitConvertTextBox  Text="{Binding model.OD}"  UnitOrigin="{Binding ElementName=lblOD,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="2" />
        <CustomControl:UnitConvertTextBox  Text="{Binding model.Length}"  UnitOrigin="{Binding ElementName=lblLength,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="3" />
        <TextBox Text="{Binding model.PipingContingency}" Grid.Column="2" Grid.Row="4"/>
        <CustomControl:UnitConvertTextBox  Text="{Binding model.Elevation}" UnitOrigin="{Binding ElementName=lblElevation,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="5"/>
        <Label x:Name="lblOD"  Content="{Binding model.ODUnit,Mode=TwoWay}"  Grid.Column="3" Grid.Row="2" />
        <Label x:Name="lblLength"  Content="{Binding model.LengthUnit,Mode=TwoWay}"  Grid.Column="3" Grid.Row="3" />
        <Label x:Name="lblPipingContingency"  Content="%"  Grid.Column="3" Grid.Row="4"/>
        <Label x:Name="lblElevation"  Content="{Binding model.ElevationUnit,Mode=TwoWay}" Grid.Column="3" Grid.Row="5"/>
        <ComboBox ItemsSource="{Binding lstExposedToFires}" SelectedItem="{Binding SelectedExposedToFire}"  Grid.Column="2" Grid.Row="0"/>
        <ComboBox ItemsSource="{Binding lstTypes}" SelectedItem="{Binding SelectedType}"  Grid.Column="2" Grid.Row="1"/>
        <Button Content="{DynamicResource OK}" Command="{Binding OKCMD}" CommandParameter="{Binding ElementName=myWindow}"  Grid.Column="2" Grid.Row="6" Width="75" Height="22"/>
        <Button Content="{DynamicResource Cancel}" IsCancel="True"   Grid.Column="3" Grid.Row="6" Width="75" Height="22"/>
    </Grid>
</Window>
