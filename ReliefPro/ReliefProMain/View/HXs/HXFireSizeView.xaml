<Window x:Name="myWindow" x:Class="ReliefProMain.View.HXs.HXFireSizeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomControl="clr-namespace:ReliefProMain.CustomControl"
        Title="{DynamicResource HXFireSizeViewTitle}" Height="290" Width="485" Style="{DynamicResource WinStyle}" Icon="/ReliefProMain;component/Images/app.ico"  >
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="23"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="140"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label  Content="{DynamicResource ExposedtoFire}" Grid.Column="1" Grid.Row="1" />
        <Label  Content="{DynamicResource Type}" Grid.Column="1" Grid.Row="2" />
        <Label  Content="{DynamicResource OD}"  Grid.Column="1" Grid.Row="3" />
        <Label  Content="{DynamicResource Length}"  Grid.Column="1" Grid.Row="4"  />
        <Label  Content="{DynamicResource PipingContingency}" Grid.Column="1" Grid.Row="5"  />
        <Label Content="{DynamicResource Elevation}" Grid.Column="1" Grid.Row="6" />
        <CustomControl:UnitConvertTextBox   Text="{Binding model.OD}" BorderBrush="{Binding model.OD_Color}"  UnitOrigin="{Binding ElementName=lblOD,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="3" />
        <CustomControl:UnitConvertTextBox   Text="{Binding model.Length}" BorderBrush="{Binding model.Length_Color}"  UnitOrigin="{Binding ElementName=lblLength,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="4" />
        <TextBox Text="{Binding model.PipingContingency}"  BorderBrush="{Binding model.PipingContingency_Color}" Grid.Column="2" Grid.Row="5"/>
        <CustomControl:UnitConvertTextBox  Text="{Binding model.Elevation}"  BorderBrush="{Binding model.Elevation_Color}" UnitOrigin="{Binding ElementName=lblElevation,Path=Content,Mode=TwoWay}" Grid.Column="2" Grid.Row="6"/>
        <Label x:Name="lblOD"  Content="{Binding model.ODUnit,Mode=TwoWay}"  Grid.Column="3" Grid.Row="2" />
        <Label x:Name="lblLength"  Content="{Binding model.LengthUnit,Mode=TwoWay}"  Grid.Column="3" Grid.Row="3" />
        <Label x:Name="lblPipingContingency"  Content="%"  Grid.Column="3" Grid.Row="4"/>
        <Label x:Name="lblElevation"  Content="{Binding model.ElevationUnit,Mode=TwoWay}" Grid.Column="3" Grid.Row="5"/>
        <ComboBox ItemsSource="{Binding lstExposedToFires}" SelectedItem="{Binding SelectedExposedToFire}"  Grid.Column="2" Grid.Row="1"/>
        <ComboBox ItemsSource="{Binding lstTypes}" SelectedItem="{Binding SelectedType}"  Grid.Column="2" Grid.Row="2"/>
        
        <Grid Height="40"  Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="{DynamicResource OK}" Command="{Binding OKCMD}" CommandParameter="{Binding ElementName=myWindow}"  Grid.Column="1" />
            <Button Content="{DynamicResource Cancel}" IsCancel="True"   Grid.Column="2" />
        </Grid>

        <StatusBar  HorizontalAlignment="Stretch" Height="23" Grid.Row="8"  Grid.ColumnSpan="5" >
            <StatusBarItem>
                <TextBlock Text="{DynamicResource HXFireSizeViewStatusBar}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
