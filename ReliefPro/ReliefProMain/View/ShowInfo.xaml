<Window x:Class="ReliefProMain.View.ShowInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowInfo" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Name="dataGrid1" ItemsSource="{Binding ListDemoCollection, Mode=TwoWay}" AutoGenerateColumns="False" Grid.Row="0">
                    <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Path=ID}"/>
                <DataGridTextColumn Header="col1" Width="80" Binding="{Binding Path=col1, Mode=TwoWay}"/>
                <DataGridTextColumn Header="colDate" Binding="{Binding Path=colDate}"/>
                <DataGridTextColumn Header="colString" Width="80" Binding="{Binding Path=colString, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>

        <Button  Height="23" Command="{Binding AddCommand}" HorizontalAlignment="Left" 
                Name="btnAdd" VerticalAlignment="Bottom" Width="75" Grid.Row="1">新增
                </Button>
           
       
    </Grid>
</Window>
