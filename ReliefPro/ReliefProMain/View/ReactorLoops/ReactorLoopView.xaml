<Window x:Class="ReliefProMain.View.ReactorLoops.ReactorLoopView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource ReactorLoopViewTitle}" Height="700" Width="883.582">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition/>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
         
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="187"/>
            <ColumnDefinition Width="226"></ColumnDefinition>
            <ColumnDefinition Width="180*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{DynamicResource EffluentStream}"  Grid.Row="1" Height="25" Width="100" Margin="6,3,0,0" Grid.Column="1"/>
        <Label Content="{DynamicResource ColdReactorFeedStream}"  Grid.Row="2" Height="25" Margin="6,5,0,0" Grid.Column="1"/>
        <Label Content="{DynamicResource HotHighPressureSeparator}"  Grid.Row="3" Height="25" Margin="6,5,0,0" Grid.Column="1"/>
        <Label Content="{DynamicResource ColdHighPressureSeparator}"  Grid.Row="4" Height="25" Margin="6,5,0,0" Grid.Column="1"/>

        <Label Content="{DynamicResource HXnetworkcoldstream}"  Grid.Row="5" Height="25" Margin="6,5,0,0" Grid.Column="1"/>
        <Label Content="{DynamicResource Injectionwaterstream}"  Grid.Row="6" Height="25"  Margin="6,5,0,0" Grid.Column="1"/>
        <Button Content="{DynamicResource OK}" Grid.Column="2" Height="24" Grid.Row="22" Width="74" Margin="0,10,61,6" RenderTransformOrigin="0.392,-4.083" HorizontalAlignment="Right" />

        <ComboBox ItemsSource="{Binding Path=model.EffluentStreamSource}" SelectedItem="{Binding model.EffluentStream,Mode=TwoWay}" Grid.Column="2" Height="22" Margin="55,2,52,4" Grid.Row="1" />
        <ComboBox ItemsSource="{Binding Path=model.ColdReactorFeedStreamSource}" SelectedItem="{Binding model.ColdFeedStream,Mode=TwoWay}" Grid.Column="2"   Grid.Row="2" Height="22" Margin="55,4,52,4"/>
        <ComboBox ItemsSource="{Binding Path=model.HotHighPressureSeparatorSource}" SelectedItem="{Binding model.HotHighPressureSeparator,Mode=TwoWay}" Grid.Column="2"   Grid.Row="3" Height="22" Margin="55,4,52,4"/>
        <ComboBox ItemsSource="{Binding Path=model.ColdHighPressureSeparatorSource}" SelectedItem="{Binding model.ColdHighPressureSeparator,Mode=TwoWay}" Grid.Column="2"   Grid.Row="4" Height="22" Margin="55,4,52,4"/>

        <ComboBox ItemsSource="{Binding Path=model.HXNetworkColdStreamSource}" SelectedItem="{Binding model.HXNetworkColdStream,Mode=TwoWay}" Grid.Column="2"   Grid.Row="5" Height="22" Margin="55,4,52,4"/>
        <ComboBox ItemsSource="{Binding Path=model.InjectionWaterStreamSource}" SelectedItem="{Binding model.InjectionWaterStream,Mode=TwoWay}" Grid.Column="2"   Grid.Row="6" Height="22" Margin="55,4,52,4"/>

        <GroupBox Header="{DynamicResource ProcessHX}" HorizontalAlignment="Left" Margin="6,2,0,0" Grid.Row="7" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="140" Grid.RowSpan="5" Width="300" Grid.Column="1">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding Path=model.ObcProcessHX,Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel,Mode=OneWayToSource}" Margin="0,0,0,0" Grid.Row="1" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="{DynamicResource HXName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding Path=DetailInfo,Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" ></TextBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                           
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>
        <GroupBox Header="{DynamicResource ProcessHX}" HorizontalAlignment="Left" Margin="49,2,-345,0" Grid.Row="7" VerticalAlignment="Top" Height="140" Grid.RowSpan="5" Width="300" Grid.Column="3">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding Path=model.ObcProcessHXSource,Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel,Mode=OneWayToSource}" Margin="0,0,0,0" Grid.Row="1" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="{DynamicResource HXName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding Path=DetailInfo,Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" ></TextBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>

        <GroupBox Header="{DynamicResource UtilityHX}" HorizontalAlignment="Left" Margin="6,10,0,0" Grid.Row="12" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="140" Grid.RowSpan="5" Width="300" Grid.Column="1">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding Path=model.ObcUtilityHX,Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel,Mode=OneWayToSource}" Margin="0,0,0,0" Grid.Row="1" >
                    <ListView.View>
                        <GridView >

                            <GridViewColumn Header="{DynamicResource HXName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding Path=DetailInfo,Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" ></TextBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>
        <GroupBox Header="{DynamicResource UtilityHX}" HorizontalAlignment="Left" Margin="49,2,-345,0" Grid.Row="12" VerticalAlignment="Top" Height="140" Grid.RowSpan="5" Width="300" Grid.Column="3">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding Path=ObcUtilityHXSource,Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel,Mode=OneWayToSource}" Margin="0,0,0,0" Grid.Row="1" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="{DynamicResource HXName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding Path=DetailInfo,Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" ></TextBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>

        <GroupBox Header="{DynamicResource Mixer_Splitter}" HorizontalAlignment="Left" Margin="6,20,0,0" Grid.Row="17" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="120" Grid.RowSpan="5" Width="300" Grid.Column="1">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding model.ObcMixerSplitter, Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel, Mode=OneWayToSource}" Margin="0,0,0,0" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="{DynamicResource SplitterName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding DetailInfo, Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>
        <GroupBox Header="{DynamicResource Mixer_Splitter}" HorizontalAlignment="Left" Margin="49,20,-345,0" Grid.Row="17" VerticalAlignment="Top" Height="120" Grid.RowSpan="5" Width="300" Grid.Column="3">
            <Grid>
                <ListView HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" SelectionMode="Single"  ItemsSource="{Binding ObcMixerSplitterSource, Mode=TwoWay}" SelectedItem="{Binding Path=model.SelectedHXModel, Mode=OneWayToSource}" Margin="0,0,0,0" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="{DynamicResource SplitterName}" Width="150px" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox IsEnabled="False" Text="{Binding DetailInfo, Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="150px" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </GroupBox>

        <Button Command="{Binding OKCMD}" Content="{DynamicResource OK}" Grid.Column="2" Height="24" Grid.Row="22" Width="74" Margin="0,10,61,6" RenderTransformOrigin="0.392,-4.083" HorizontalAlignment="Right" />
        <Button Content="{DynamicResource Cancel}" IsCancel="True"  Grid.Column="2" Height="24" Grid.Row="22" Width="74" Margin="216,10,-59,6" RenderTransformOrigin="0.392,-4.083" Grid.ColumnSpan="2" />
        <Button Command="{Binding SimulationCMD}" Content="{DynamicResource Simulation}" Height="24" Grid.Row="22" Width="74" Margin="0,6,20,10" RenderTransformOrigin="0.392,-4.083" HorizontalAlignment="Right" Grid.Column="1" />
        <Button Command="{Binding ProcessHXAddCMD}" Content="&lt;--" Grid.Column="2" HorizontalAlignment="Left" Margin="144,0,0,8" Grid.Row="9" VerticalAlignment="Stretch" Width="75"/>
        <Button Command="{Binding ProcessHXDelCMD}" Content="--&gt;" Grid.Column="2" HorizontalAlignment="Left" Margin="144,0,0,0" Grid.Row="10" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding UtilityHXAddCMD}" Content="&lt;--" Grid.Column="2" HorizontalAlignment="Left" Margin="144,0,0,8" Grid.Row="14" VerticalAlignment="Stretch" Width="75"/>
        <Button Command="{Binding UtilityHXDelCMD}" Content="--&gt;" Grid.Column="2" HorizontalAlignment="Left" Margin="144,28,0,0" Grid.Row="14" VerticalAlignment="Top" Width="75" Grid.RowSpan="2"/>
        <Button Command="{Binding MixerSplitterAddCMD}" Content="&lt;--" Grid.Column="2" HorizontalAlignment="Left" Margin="154,28,0,10" Grid.Row="18" VerticalAlignment="Stretch" Width="75" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button Command="{Binding MixerSplitterDelCMD}" Content="--&gt;" Grid.Column="2" HorizontalAlignment="Left" Margin="154,0,0,0" Grid.Row="20" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>


        <Button Content="Import from database" Command="{Binding ImportCMD}"   Grid.Column="3" Height="24" Grid.Row="1" Width="140"   />
       
    </Grid>
</Window>
