<Window x:Class="ReliefProMain.View.ImportDataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        Title="Import Data" Height="320" Width="630" Loaded="Window_Loaded_1"  ShowInTaskbar="False" BorderBrush="#FF1D1A1A" BorderThickness="1" Closing="MetroWindow_Closing_1">
    
        <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

            <GroupBox Header="Simulation File Type" HorizontalAlignment="Left" VerticalAlignment="Center" Height="100" Width="550" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="90*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="r1" Grid.Row="0" Grid.Column="1" Content="PRO/II" IsChecked="True" GroupName="filetype" HorizontalAlignment="Left" Height="20" VerticalAlignment="Center" Width="161" />
                <RadioButton Name="r2" Grid.Row="1" Grid.Column="1" IsEnabled="False" Content="Aspen Plus" GroupName="filetype" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                <RadioButton Name="r3" Grid.Row="2" Grid.Column="1" IsEnabled="False" Content="Hysys" GroupName="filetype" HorizontalAlignment="Left"  VerticalAlignment="Center" />
            </Grid>
        </GroupBox>
        
        <Button x:Name="btnImport" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="btnImport_Click" Height="25" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">                
                <TextBlock Width="61" ><Run Text="Find File"/></TextBlock>
            </StackPanel>
        </Button>
        <TextBox Name="txtSourceFile" HorizontalAlignment="Left" Height="50"  IsEnabled="False" Text="" TextWrapping="Wrap"  AcceptsReturn="True" VerticalScrollBarVisibility="Visible"  VerticalAlignment="Center" Width="436" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"/>
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" VerticalAlignment="Center" Width="340" Height="28" Visibility="Hidden" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3"/>

        <Border BorderBrush="black"  VerticalAlignment="top" Height="1" BorderThickness="0,0,0,1"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"/>
        <Button Content="OK" Name="btnOK" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="75" Height="25" Click="btnOK_Click" Grid.Row="3" Grid.Column="2"/>
        <Button Content="Cancel" Name="btnCancel" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Height="25" Click="btnCancel_Click"  Grid.Row="3" Grid.Column="3"/>
       
            <StatusBar  HorizontalAlignment="Stretch" Height="16" Grid.Row="9" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <Label></Label>
        </StatusBar>
    </Grid>
       
</Window>
