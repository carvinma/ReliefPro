<Window x:Class="ReliefProMain.View.PSVView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     
        Title="PSV" Height="397.139" Width="561.564" Loaded="Window_Loaded_1">
    
        <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Label Content="PSV Name:" HorizontalAlignment="Left" Margin="29,33,0,0" VerticalAlignment="Top" Height="26" Width="73"/>
        <TextBox   Name="txtName"   HorizontalAlignment="Left" Height="23" Margin="115,36,0,0" TextWrapping="Wrap" Text="PSV1" VerticalAlignment="Top" Width="160"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="297,33,0,0" VerticalAlignment="Top" Height="26" Width="79"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="31" Margin="391,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149"/>
        <Label Content="Valve Number:" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="95"/>
        <TextBox Name="txtValveNumber" HorizontalAlignment="Left" Height="23" Margin="115,23,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="160" Grid.Row="1"/>
        <Label Content="Value Type:" HorizontalAlignment="Left" Margin="300,20,0,0" VerticalAlignment="Top" Grid.Row="1" Height="25" Width="76"/>
        <ComboBox Name="cbxValueType" HorizontalAlignment="Left" Margin="391,22,0,0" VerticalAlignment="Top" Width="149" Grid.Row="1" Height="22">
            <ComboBoxItem Content="Modulation" IsSelected="True"/>
            <ComboBoxItem Content="Pop Action"/>
            <ComboBoxItem Content="Rupture Disk"/>
            <ComboBoxItem Content="Temperature Actuated"/>
        </ComboBox>
        <Label Content="Set Pressure:" HorizontalAlignment="Left" Margin="29,12,0,0" VerticalAlignment="Top" Grid.Row="2" Height="22" Width="83"/>
        <TextBox Name="txtPress" HorizontalAlignment="Left" Height="23" Margin="118,15,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157" RenderTransformOrigin="-0.167,-1.923" Grid.Row="2"/>
            <TextBox Name="txtLocationDescription" HorizontalAlignment="Left" Height="49" Margin="118,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" Grid.Row="4"/>
            <Label Content="Description" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Grid.Row="4" Height="26" Width="76"/>
        <Label Content="Prelief     =" HorizontalAlignment="Left" Margin="26,22,0,0" VerticalAlignment="Top" Grid.Row="3" Height="26" Width="73"/>
        <TextBox Name="txtPrelief" HorizontalAlignment="Left" Height="23" Margin="126,25,0,0" TextWrapping="Wrap" Text="1.16" VerticalAlignment="Top" Width="149" Grid.Row="3"/>
        <Label Content="Pset" HorizontalAlignment="Left" Margin="300,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.118,0.476" Grid.Row="3" Height="25" Width="34"/>
        <TextBlock HorizontalAlignment="Left" Margin="299,15,0,0" TextWrapping="Wrap" Text="MPag" VerticalAlignment="Top" Grid.Row="2" Height="16" Width="33"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch"   Grid.Row="5" VerticalAlignment="Top" Height="2" />
        <Button Content="OK"  HorizontalAlignment="Left" Margin="362,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" Height="22" Click="btnOK_Click"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="465,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" Height="22"/>

    </Grid>
    
   
</Window>
