<Window x:Class="ReliefProMain.View.CustomStreamView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
        Title="1(Stream)" Height="489.552" Width="565.672" >
    
        <Grid Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="162*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="165*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Label Content="Stream Name:" HorizontalAlignment="Left" Margin="38,10,0,0" VerticalAlignment="Top" Width="98" Height="26" Grid.Row="1"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="5,10,0,0" TextWrapping="Wrap" Text="{Binding StreamName}" VerticalAlignment="Top" Width="150"  Grid.Row="1" Grid.Column="1"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="50,12,0,0" VerticalAlignment="Top" Width="78" Height="26" Grid.Row="2"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="23" Margin="5,12,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="360" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
       
               
                 
                <Label Content="VabFrac:" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.803,-0.095" Height="26" Width="59" Grid.Row="3"/>
        <TextBox Name="txtVabFrac" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding VaporFraction}" VerticalAlignment="Top" Width="145"  Grid.Row="3" Grid.Column="1"/>
                <Label Content="Temperature:" HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" Grid.Row="4" Height="26" Width="87" />
                <TextBox Name="txtTemp" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  Grid.Row="4" Grid.Column="1"/>
                <Label Content="Presressure(Mpag):" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Grid.Row="5" Height="26" Width="120"/>
                <Label Content="Workflow(Kg/hr):" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" Grid.Row="6" Height="26" Width="109"/>
                <Label Content="Sp H(KJ/Kg):" HorizontalAlignment="Left" Margin="38,55,0,0" VerticalAlignment="Top" Grid.Row="6" Height="26" Width="81" RenderTransformOrigin="-0.816,0.087"/>
                <TextBox Name="txtPres" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Temperature}" VerticalAlignment="Top" Width="120" Grid.Row="5" Grid.Column="1" />
                <TextBox Name="txtWf" HorizontalAlignment="Left" Height="23" Margin="10,13,0,0" TextWrapping="Wrap" Text="{Binding WeightFlow}" VerticalAlignment="Top" Width="120" Grid.Row="6" Grid.Column="1" />
                <TextBox Name="txtSph" HorizontalAlignment="Left" Height="23" Margin="10,55,0,0" TextWrapping="Wrap" Text="{Binding SpEnthalpy}" VerticalAlignment="Top" Width="120" Grid.Row="6" Grid.Column="1" />

          
            <Button Content="OK" HorizontalAlignment="Left" Margin="109,26,0,0" Grid.Row="7" VerticalAlignment="Top" Width="75" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="1,26,0,0" Grid.Row="7" VerticalAlignment="Top" Width="75" Grid.Column="3"/>
        <Label Content="KJ/Kg" Grid.Column="2" HorizontalAlignment="Left" Margin="9,52,0,0" Grid.Row="6" VerticalAlignment="Top"/>
        <Label Content="Kg/hr" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="6" VerticalAlignment="Top"/>
        <Label Content="MPag" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="5" VerticalAlignment="Top"/>
        <Label Content="C" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top"/>

    </Grid>
       
</Window>
