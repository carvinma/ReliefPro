<Window x:Class="ReliefProMain.View.SelectEquipmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Select Equipment" Height="178.506" Width="434.223" Name="myWindow">
    
        <Grid DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbxFilePath" ItemsSource="{Binding SourceFiles}" SelectedItem="{Binding SelectedFile}" HorizontalAlignment="Left" Margin="137,25,0,0" VerticalAlignment="Top" Width="262"  Height="22"/>
        <ComboBox x:Name="cbxStream" ItemsSource="{Binding EqNames}" SelectedItem="{Binding SelectedEq}" HorizontalAlignment="Left" Margin="137,10,0,0" VerticalAlignment="Top" Width="262" Grid.Row="1" Height="22"/>
        <Label Content="File Path:" HorizontalAlignment="Left" Margin="52,25,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
        <Label Content="Equipment:" HorizontalAlignment="Left" Margin="39,10,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="75"/>
        <Border BorderBrush="black"    VerticalAlignment="top" Height="1" BorderThickness="0,0,0,1" Margin="-1,0,1,0"  Grid.Row="2">
        </Border>
        <Button Content="OK" Command="{Binding OKCommand}" CommandParameter="{Binding ElementName=myWindow}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Height="25"  Margin="223,10,0,0"  Grid.Row="2"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Height="25"  Margin="324,10,0,0"  Grid.Row="2"/>

    </Grid>
       
    
</Window>
