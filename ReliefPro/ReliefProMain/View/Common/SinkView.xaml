<Window x:Class="ReliefProMain.View.SinkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                        
        Title="Source" Height="340.298" Width="535"  Name="myWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Sink Name:"  HorizontalAlignment="Left" Margin="117,25,0,0" VerticalAlignment="Top" Width="94" Height="26"/>
        <TextBox Name="txtName"  HorizontalAlignment="Left" Height="23" Margin="242,25,0,0" TextWrapping="Wrap" Text="{Binding Path=MainModel.SinkName}" VerticalAlignment="Top" Width="169" />
        <Label Content="Description:" HorizontalAlignment="Left" Margin="127,16,0,0" VerticalAlignment="Top" Width="89" Grid.Row="1" Height="26"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="23" Margin="242,16,0,0" TextWrapping="Wrap" Text="{Binding Path=MainModel.Description}" VerticalAlignment="Top" Width="169" Grid.Row="1"/>
        <Label Content="Sink Type:" HorizontalAlignment="Left" Margin="122,13,0,0" VerticalAlignment="Top" Width="94" Grid.Row="2" Height="26"/>
        <ComboBox ItemsSource="{Binding Path=SinkTypes}" SelectedItem="{Binding MainModel.SinkType}"   Name="cbxType" HorizontalAlignment="Left" Margin="242,13,0,0" VerticalAlignment="Top" Width="169"  Grid.Row="2" Height="22"/>

        <Label Content="Max Possible Pressure:" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="151" Grid.Row="3" Height="26"/>
        <TextBox Name="txtMaxPressure" HorizontalAlignment="Left" Height="23" Margin="242,13,0,0" TextWrapping="Wrap" Text="{Binding Path=MainModel.MaxPossiblePressure}" VerticalAlignment="Top" Width="169"  Grid.Row="3"/>
        <Label HorizontalAlignment="Left" Margin="433,26,0,0" Content="{Binding Path=MainModel.PressureUnit}" VerticalAlignment="Top" Grid.Row="3" RenderTransformOrigin="0.1,1.5" Height="10" Width="10"/>

        <Button x:Name="btnOK" Content="OK" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=myWindow}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75"  Margin="353,10,0,0" Grid.Row="5" Height="22"/>
        <Button x:Name="btnCancel" IsCancel="True" Content="Cancel" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Margin="433,10,0,0" Grid.Row="5" Height="22"  />


    </Grid>

</Window>
