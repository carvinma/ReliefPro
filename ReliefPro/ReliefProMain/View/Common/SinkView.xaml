<Window x:Class="ReliefProMain.View.SinkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                        
        Title="Sink" Height="300" Width="530"  Name="myWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Sink Name"  HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Height="26"/>
        <TextBox Name="txtName"  HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="{Binding Path=MainModel.SinkName}" VerticalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="2" Width="169" />
        <Label Content="Description" HorizontalAlignment="Right"  VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Height="26"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="{Binding Path=MainModel.Description}" VerticalAlignment="Center" Width="169" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Label Content="Sink Type" HorizontalAlignment="Right"  VerticalAlignment="Center"  Grid.Column="1" Grid.Row="2" Height="26"/>
        <ComboBox ItemsSource="{Binding Path=SinkTypes}" SelectedItem="{Binding MainModel.SinkType}"   Name="cbxType" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="169" Grid.Column="2" Grid.ColumnSpan="2"  Grid.Row="2" Height="22"/>

        <Label Content="Max Possible Pressure" HorizontalAlignment="Right"  VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Height="26"/>
        <TextBox Name="txtMaxPressure" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Path=MainModel.MaxPossiblePressure}" VerticalAlignment="Center" Width="169" Grid.Column="2" Grid.ColumnSpan="2"  Grid.Row="3"/>
        <Label HorizontalAlignment="Left" Content="{Binding Path=MainModel.PressureUnit,Mode=TwoWay}" VerticalAlignment="Center" Grid.Row="3" Grid.Column="3" Height="10" Width="10"/>

        <Border BorderBrush="black"    VerticalAlignment="top" Height="1" BorderThickness="0,0,0,1"   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5">
        </Border>
        <Grid HorizontalAlignment="Stretch" Height="32"  Grid.Row="5" VerticalAlignment="Stretch" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK" Content="OK" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=myWindow}" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Grid.Column="1"   Height="22"/>
            <Button x:Name="btnCancel" IsCancel="True" Content="Cancel" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Grid.Column="3"  Height="22"  />

        </Grid>

        
        <StatusBar  HorizontalAlignment="Stretch" Height="16" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="5">
            <Label></Label>
        </StatusBar>
    </Grid>

</Window>
