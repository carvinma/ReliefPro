<Window x:Class="ReliefProMain.View.FireView"
		x:Name="DrumFireWin"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:CustomControl="clr-namespace:ReliefProMain.CustomControl"
		Title="{DynamicResource FireViewTitle}" Height="300" Width="500">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="5*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="16*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"></ColumnDefinition>
			<ColumnDefinition Width="180*"></ColumnDefinition>
			<ColumnDefinition Width="180*"></ColumnDefinition>
			<ColumnDefinition Width="130*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
        <Label Content="{DynamicResource ReliefLoad}" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1"/>
        <Label Content="{DynamicResource ReliefPressure}" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="1"/>
        <Label Content="{DynamicResource ReliefTemperature}" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Label Content="{DynamicResource ReliefMW}" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1"/>
        <Label Content="{DynamicResource ReliefCp_Cv}" Visibility="Hidden" Grid.Row="7" Grid.Column="1"/>
        <Label Content="{DynamicResource ReliefZ}" Visibility="Hidden" Grid.Row="8" Grid.Column="1"/>
		<CustomControl:UnitConvertTextBox Text="{Binding Path=model.WettedArea,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblArea,Path=Content,Mode=TwoWay}" Grid.Column="2"  Grid.Row="1" HorizontalAlignment="Left" />
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.ReliefLoad,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblLoad,Path=Content,Mode=TwoWay}" HorizontalAlignment="Left" Grid.Column="2"  Grid.Row="3"/>
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.ReliefPressure,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblPresses,Path=Content,Mode=TwoWay}" HorizontalAlignment="Left" Grid.Column="2"  Grid.Row="4"/>
        <CustomControl:UnitConvertTextBox Text="{Binding Path=model.ReliefTemperature,Mode=TwoWay}" UnitOrigin="{Binding ElementName=lblTemper,Path=Content,Mode=TwoWay}" HorizontalAlignment="Left" Grid.Column="2"  Grid.Row="5"/>
        <TextBox Text="{Binding Path=model.ReliefMW,Mode=TwoWay}" HorizontalAlignment="Left" Grid.Column="2"  Grid.Row="6"/>
        <TextBox Visibility="Hidden"  Text="{Binding Path=model.ReliefCpCv,Mode=TwoWay}" Grid.Column="2"  Grid.Row="7"/>
        <TextBox Visibility="Hidden"  Text="{Binding Path=model.ReliefZ,Mode=TwoWay}" Grid.Column="2"  Grid.Row="8"/>
        
        <Label x:Name="lblArea" Content="{Binding model.AreaUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="3" Grid.Row="1"/>
        <Label x:Name="lblLoad" Content="{Binding model.ReliefLoadUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="3" Grid.Row="3"/>
        <Label x:Name="lblPresses" Content="{Binding model.ReliefPressureUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="3" Grid.Row="4"/>
        <Label x:Name="lblTemper" Content="{Binding model.ReliefTemperatureUnit,Mode=TwoWay}" Style="{StaticResource LabelLeftStyle}" Grid.Column="3" Grid.Row="5"/>

        <Button Content="{DynamicResource CalcArea}" HorizontalAlignment="Right" Command="{Binding DrumSizeCMD}" Grid.Column="1" Grid.Row="1"  Width="125"  Height="21"  />
        <Button Content="{DynamicResource RunCalculation}" HorizontalAlignment="Center" Command="{Binding CalcCMD}"  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"  Width="125"  Height="21" />

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,0,1" VerticalAlignment="top" Height="1"  Grid.Row="8" Grid.ColumnSpan="4" ></Border>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,0,1" VerticalAlignment="top" Height="1"  Grid.Row="8" Grid.ColumnSpan="4" ></Border>

        <Grid HorizontalAlignment="Stretch" Height="32"  Grid.Row="8" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="{DynamicResource OK}" Command="{Binding OKCMD}" CommandParameter="{Binding ElementName=DrumFireWin}" Grid.Column="1"   Width="75"  Height="25"/>
            <Button Content="{DynamicResource Cancel}" IsCancel="True" Grid.Column="2"  Width="75" Height="25"/>

        </Grid>

        
        <StatusBar  HorizontalAlignment="Stretch" Height="16" Grid.Row="9" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <Label></Label>
        </StatusBar>
    </Grid>
</Window>
