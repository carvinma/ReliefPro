<Window x:Class="ReliefProMain.View.CreateProtectedSystemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Protected System" Height="180" Width="360" Name="myWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="155*"/>
            <ColumnDefinition Width="155*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Protected System Name" Grid.Column="1"  Grid.Row="1" HorizontalAlignment="Right"/>
        <TextBox Grid.Column="2"  Grid.Row="1" TextWrapping="NoWrap" Text="{Binding ProtectedSystemName}"  VerticalAlignment="Top" />

        <Border Grid.Column="0" BorderBrush="Black" VerticalAlignment="top" Height="5" Grid.Row="2" Grid.ColumnSpan="4" ></Border>

        <Grid HorizontalAlignment="Stretch" Height="32"  Grid.Row="2" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="OK" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=myWindow}" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Height="22" Width="75" />
            <Button Content="Cancel" IsCancel="True" Grid.Column="2" Grid.Row="2" Height="22" Width="75" VerticalAlignment="Center" />

        </Grid>

        
        <StatusBar  HorizontalAlignment="Stretch" Height="16" Grid.Row="3" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <Label></Label>
        </StatusBar>
        
    </Grid>
</Window>
