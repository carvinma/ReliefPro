<Window x:Class="ReliefProMain.View.BasicUnitInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource BasicUnitInfo Title}" Height="150" Width="400" WindowStyle="ToolWindow" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblWarning" Content="Then New Basic Name Is Already exists!" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Background="#FFE81414" Visibility="Hidden"/>
        <Label Content="{DynamicResource New Basic Name}" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="23" Text="" VerticalAlignment="Center" Width="250" TextChanged="txtName_TextChanged"/>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,0,1" VerticalAlignment="Center" Height="1" Grid.Row="2" Grid.ColumnSpan="2" ></Border>

        <Grid HorizontalAlignment="Stretch" Height="32"  Grid.Row="3" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK" Content="{DynamicResource OK}" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Content="{DynamicResource Cancel}" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Width="75" IsCancel="True"/>

        </Grid>
        <StatusBar  HorizontalAlignment="Stretch" Grid.Row="4" VerticalAlignment="Bottom" Grid.ColumnSpan="2" >
            <Label></Label>
        </StatusBar>
    </Grid>
</Window>
