<Window x:Class="ReliefProMain.View.GlobalDefault.GlobalDefaultView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlareSystemView" Height="300" Width="500">
    <Grid>
       
        <StackPanel>
          <GroupBox Header="Flare System" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" >
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListView Name="lv" SelectionMode="Single"  ItemsSource="{Binding Path=Details,Mode=TwoWay}" SelectedItem="{Binding SelectedDetail,Mode=TwoWay}" >
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Width="0"    Header="#"   DisplayMemberBinding="{Binding Path=SeqNumber,Mode=TwoWay}"></GridViewColumn>
                            <GridViewColumn Header="Flare Name" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path=DetailName,Mode=TwoWay}"  HorizontalAlignment="Stretch" Width="120"></TextBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Design Back Pressure, MPag"  x:Name="ProcessSideFlowSource" Width="180px"  >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding Path=ProcessSideFlowSources}" SelectedItem="{Binding Path=ProcessSideFlowSource}"  HorizontalAlignment="Stretch" Width="150px">
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}},Path=DataContext.DeleteCommand}" CommandParameter="{Binding SeqNumber,Mode=TwoWay}" ></Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>
          <GroupBox Header="General Conditions">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="General Instrument Air Failure is a credible scenario" Grid.Row="0"/>
                    <Label Content="Cooling water stops at General Electric Power Failure Scenario" Grid.Row="1"/>
                    <Label Content="Steam supply stops at General Electric Power Failure Scenario" Grid.Row="2"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" />
                    <CheckBox Grid.Row="1" Grid.Column="1" />
                    <CheckBox Grid.Row="2" Grid.Column="1" />
                </Grid>
            </GroupBox>
          <GroupBox Header="Default Settings">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Latent Heat for Supercritical Fluid" Grid.Row="0"/>
                    <Label Content="Drum Surge Time Threshold" Grid.Row="1"/>
                    <Label Content="Kcal/kg" Grid.Row="0" Grid.Column="2"/>
                    <Label Content="min" Grid.Row="1"  Grid.Column="2"/>
                    <TextBox Width="90" Grid.Row="0" Grid.Column="1" />
                    <TextBox Width="90" Grid.Row="1" Grid.Column="1" />
                </Grid>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="OK" Width="50"/>
            <Button Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
